# ====================
# QUICK START - SQLite for Local Development
# ====================
# Just use this for local dev - no database server needed!
DATABASE_URL="sqlite:///./data/dev.db"

# ====================
# Application
# ====================
PROJECT_NAME="Takeoff Extraction Service"
VERSION="1.0.0"
API_V1_PREFIX="/api/v1"
DEBUG=True

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY="test-api-key-change-in-production"

# ====================
# PostgreSQL (Optional - for production)
# ====================
# Comment out DATABASE_URL above and uncomment these for PostgreSQL:
# POSTGRES_SERVER=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=takeoff_service

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# ====================
# User Authentication (Optional)
# ====================
# For extraction service using API keys, disable user creation:
DISABLE_BOOTSTRAP_USERS=true

# If you need user auth, uncomment and use passwords <= 72 bytes:
# FIRST_SUPERUSER_EMAIL=admin@example.com
# FIRST_SUPERUSER_PASSWORD=changethis
